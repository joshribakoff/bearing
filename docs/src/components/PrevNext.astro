---
import { getTitle } from '../navigation';

interface Props {
  prev: string | null;
  next: string | null;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav class="prev-next">
    {prev ? (
      <a href={`/docs/${prev}/`} class="prev-next-link prev">
        <span class="prev-next-label">Previous</span>
        <span class="prev-next-title">{getTitle(prev)}</span>
      </a>
    ) : <div></div>}
    {next ? (
      <a href={`/docs/${next}/`} class="prev-next-link next">
        <span class="prev-next-label">Next</span>
        <span class="prev-next-title">{getTitle(next)}</span>
      </a>
    ) : <div></div>}
  </nav>
)}

<style>
  .prev-next {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .prev-next-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    text-decoration: none;
    transition: border-color 0.15s, background-color 0.15s;
  }

  .prev-next-link:hover {
    border-color: var(--color-accent);
    background: var(--color-accent-dim);
  }

  .prev-next-link.next { text-align: right; }

  .prev-next-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .prev-next-title {
    font-weight: 500;
    color: var(--color-accent);
  }
</style>
